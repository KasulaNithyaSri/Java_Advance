ALL METHODS IN "LINKEDLIST"


SOURCE CODE:


import java.util.*;
class LinkedListAllMethods
{
	public static void main(String[] args)
	{
		Scanner s=new Scanner(System.in);
		LinkedList<Integer> list=new LinkedList<>();
		System.out.println("Enter the elements until -1:");
		for(;;)
		{
			int x=s.nextInt();
			if(x==-1)
				break;
			list.add(x);
		}
		System.out.println(list);
		System.out.println("Using addFirst() Method:\n Enter the element:");
		int x=s.nextInt();
		list.addFirst(x);
		System.out.println(list);
		
		System.out.println("Using addLast() method:\nEnter the element:");
		x=s.nextInt();
		list.addLast(x);
		System.out.println(list);

		System.out.println("Enter an element to check it is in the list or not?\n Using contains() methods:");
		x=s.nextInt();
		System.out.println(list.contains(x));

		System.out.println("element() Method:");
		System.out.println(list.element());

		System.out.println("getLast() Method:");
		System.out.println(list.getLast());

		System.out.println("getFirst() Method:");
		System.out.println(list.getFirst());

		System.out.println("indexOf() Method:");
		System.out.println("Enter the element to check the 1st occurence:");
		x=s.nextInt();
		System.out.println(list.indexOf(x));
	
		System.out.println("Enter the element to check the Last occurence:");
		x=s.nextInt();
		System.out.println("lastIndexOf() Method:");
		System.out.println(list.lastIndexOf(x));

		System.out.println("offer() method:\nEnter an element");
		x=s.nextInt();
		list.offer(x);
		System.out.println(list);

		System.out.println("offerFirst() method:\nEnter an element");
		x=s.nextInt();
		list.offerFirst(x);
		System.out.println(list);

		System.out.println("offerLast() method:\nEnter an element");
		x=s.nextInt();
		list.offerLast(x);
		System.out.println(list);

		System.out.println("remove() Method:\n"+list.remove());
		System.out.println(list);

		System.out.println("removeFirst() Method:\n"+list.removeFirst());
		System.out.println(list);

		System.out.println("peek() Method:\n"+list.peek());
		System.out.println("peekFirst() Method:\n"+list.peekFirst());
		System.out.println("peekLast() Method:\n"+list.peekLast());
		
	}
}
